    "version": "0.2.0",
    "configurations": [
        {
			"name": "Run Mocha Tests",
			"type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/_mocha",
            "args": [
                "--no-timeouts",
                "src/**/test.js"
            ],
            "outFiles": [
                "${workspaceRoot}/src/**/*"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "autoAttachChildProcesses": false,
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": true,
            "protocol":"auto"
        }
    ]
}
